#!/bin/bash
# vim: ft=bash

set -x
set -euo pipefail

echo "* Install Destination is $DESTDIR"
echo "* Creating a build user"
useradd -m -G wheel abuild

echo "* Building yay"
find . -print -exec chown abuild {} \;
pushd "$SRCDIR/yay"
sudo -u abuild -- makepkg --force
ls -la
install -m 0644 -o root yay*.pkg.tar.zst "$DESTDIR/"
popd
