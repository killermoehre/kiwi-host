# vim: ft=dosini
[Distribution]
Distribution=ubuntu
Release=focal
Mirror=http://azure.archive.ubuntu.com/ubuntu

[Output]
Format=gpt_xfs
Bootable=yes
Output=kiwi-host.img

[Packages]
WithNetwork=true
Packages=apt, cloud-init, openssh-server, open-vm-tools, python3, systemd, zypper
BuildPackages=cmake, gcc, libc6-dev, libcurl4-openssl-dev, libglib2.0-dev, libssl-dev, libxml2-dev, make, meson, ninja-build, pkg-config
